@model blogApp.Models.Post

@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="PostHeading" class="control-label"></label>
                <input asp-for="PostHeading" class="form-control" />
                <span asp-validation-for="PostHeading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostData" class="control-label"></label>
                <input asp-for="PostData" class="form-control" />
                <span asp-validation-for="PostData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostUrl" class="control-label"></label>
                <input asp-for="PostUrl" class="form-control" />
                <span asp-validation-for="PostUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}